<?xml version="1.0"?>
<robot name="two_arm_gripper" xmlns:xacro="http://ros.org/wiki/xacro">
  
  <joint name="joint_world_to_base_link" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name="joint_body_base_to_base_link" type="fixed">
    <parent link="base_link"/>
    <child link="link_body_base"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <joint name="joint_body_top_to_body_base" type="fixed">
    <parent link="link_body_base"/>
    <child link="link_body_top"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>

  <joint name="joint_left1_to_body_top" type="revolute">
    <parent link="link_body_top"/>
    <child link="link_left_1"/>
    <limit effort="1000.0" lower="-1.0" upper="1.0" velocity="2.0"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <xacro:macro name="transmissions" params="hardware_interface">
    <transmission name="tm_left1_to_body_top">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="joint_left1_to_body_top">
        <hardwareInterface>${hardware_interface}</hardwareInterface>
      </joint>
      <actuator name="motor_left1_to_body_top">
        <hardwareInterface>${hardware_interface}</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

</robot>